# git hooks
fresh https://gist.github.com/5431107.git pre-commit --bin=~/bin/_git-pre-commit-hook
mkdir -p ~/.git_template/hooks/
ln -sf ~/bin/_git-pre-commit-hook ~/.git_template/hooks/pre-commit

fresh_after_build() {
  if which chflags &> /dev/null; then
    chflags hidden ~/bin
  fi
}
